<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" android:visibility="visible">

     <Button
         android:id="@+id/submit_PICKUP"
         style="@android:style/Widget"
         android:layout_width="88dp"
         android:layout_height="wrap_content"
         android:layout_x="114dp"
         android:layout_y="397dp"
         android:text="Finish!" />

     <EditText
         android:id="@+id/name_cus_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="94dp"
         android:layout_y="34dp"
         android:ems="10"
         android:inputType="textPersonName" />

     <EditText
         android:id="@+id/phone2_cus_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="94dp"
         android:layout_y="150dp"
         android:ems="10"
         android:inputType="phone" />

     <EditText
         android:id="@+id/phone1_cus_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="94dp"
         android:layout_y="93dp"
         android:ems="10"
         android:inputType="phone" >
     </EditText>

     <TextView
         android:id="@+id/name_customer_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="32dp"
         android:layout_y="45dp"
         android:text="Name" />

     <TextView
         android:id="@+id/phone_customer_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="30dp"
         android:layout_y="98dp"
         android:text="Phone 1 " />

     <TextView
         android:id="@+id/address_customer_pu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="30dp"
         android:layout_y="152dp"
         android:text="Phone 2" />

     <Button
         android:id="@+id/camera"
         android:layout_width="70dp"
         android:layout_height="86dp"
         android:layout_x="8dp"
         android:layout_y="193dp"
         android:background="#ffffff"
         android:drawableBottom="@drawable/camera_button"
         android:text="Camera" />

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="215dp"
         android:layout_height="150dp"
         android:layout_x="85dp"
         android:layout_y="206dp"
         android:src="@android:drawable/btn_star" />

</AbsoluteLayout>