<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:visibility="visible" >

    <Button
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="165dp"
        android:drawableTop="@drawable/icon_customer"
        android:text="Customer" />

    <Button
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="173dp"
        android:layout_y="165dp"
        android:drawableTop="@drawable/icon_driver"
        android:text="Driver" />

    <Button
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="94dp"
        android:layout_x="2dp"
        android:layout_y="17dp"
        android:drawableBottom="@drawable/logo"
        android:text="Logo" />

    <Button
        android:id="@+id/visitWebButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="118dp"
        android:layout_y="441dp"
        android:text="Visit Website" />

</AbsoluteLayout>